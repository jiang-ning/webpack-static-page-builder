<div class="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 company-info">
        <div class="footer-logo">
          <a href="/<%= __('lang') %>/index.html"></a>
        </div>
        <a class="company-site-collapse"><%= __('footer-site-address') %></a>

        <ul class="company-site">
          <li class="active">
            <a type="botton" data-site="beijing"><%= __('footer-site-beijing') %></a>
          </li>
          <li>
            <a type="botton" data-site="shanghai"><%= __('footer-site-shanghai') %></a>
          </li>
          <li>
            <a type="botton" data-site="guangzhou"><%= __('footer-site-guangzhou') %></a>
          </li>
        </ul>
        <div class="company-address">
          <div class="active">
            <p><%= __('footer-address-beijing') %></p>
          </div>
          <div>
            <p><%= __('footer-address-shanghai1') %></p>
            <p><%= __('footer-address-shanghai2') %></p>
          </div>
          <div>
            <p><%= __('footer-address-guangzhou') %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row footer-copyright">
      <div class="col-sm-4">
        <a href="/<%= __('lang') %>/#"><%= __('footer-privacy-policy') %></a>
        <span>|</span>
        <a href="/<%= __('lang') %>/#"><%= __('footer-legal-statement') %></a>
      </div>
      <div class="col-sm-8 copyright">
        <%= __('footer-copyright') %>
      </div>
    </div>
  </div>
</div>

<div class="back-to-top">
    <a href="javascript:void(0);" class="backToTop"></a>
</div>
